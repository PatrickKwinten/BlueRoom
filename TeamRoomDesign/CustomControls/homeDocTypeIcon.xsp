	<!--
		TODO the different doc types are translated when the teamroom is
		translated but these selectedValue property literals are not and
		should not be automatically translated, so should extract the
		selectedValue literals to the strings.properties file
	-->
	<xe:multiImage styleClass="docIcon" id="multiImage1" title="Icon">
		<xe:this.value><![CDATA[#{javascript://

			var formType = viewEntry.getColumnValue("$153");
			var docType = viewEntry.getColumnValue("DocType");
			
			//var discussion = strings.getString('defaultdoctype1').toLowerCase();
			//var actionItem = strings.getString('defaultdoctype2').toLowerCase();
			//var meeting = strings.getString('defaultdoctype3').toLowerCase();
			//var reference = strings.getString('defaultdoctype4').toLowerCase();
			
			if( docType instanceof java.util.List && ! docType.isEmpty() ){
				// when multiple doc types, only use the first one.
				docType = docType.get(0);
			}
			
			formType = formType.toLowerCase();
			
			if (formType == "maintopic") {
				if(isActionItem(docType))
					return "Action Item";
				if(isMeeting(docType))
					return "Meeting";
				if(isReference(docType))
					return "Reference";
				return "Discussion";
			}
			
			docType = docType.toLowerCase();
			
			if (formType == "announcement") {
				return "Announcement";
			}
			
			if (formType == "event") {
				return "Event";
			}
			
			if (formType == "status") {
				return "Status";
			}
			
			return docType;
		}]]></xe:this.value>
		<xe:this.icons>
			<xe:iconEntry styleClass="docIcon"
				url="discussion_16px_8bit.png" selectedValue="Discussion"
				alt="Discussion Document">
			</xe:iconEntry>
			<xe:iconEntry styleClass="docIcon"
