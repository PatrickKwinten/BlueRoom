	<xe:djxmHeading id="djxmHeading2"
		back="Back" transition="slide">
		<xp:this.moveTo><![CDATA[#{javascript:
		if(null == sessionScope.from)
				return "allDocuments";
			else
				return sessionScope.from;
		}]]></xp:this.moveTo>
		<xp:this.label><![CDATA[#{javascript:
			sessionScope.backURL = "document\u0026action=openDocument\u0026documentId="+currentDocument.getNoteID();
			var actionItemDocType = strings.getString('defaultdoctype2');
			var meetingDocType = strings.getString('defaultdoctype3');
			if(currentDocument.getItemValueString("DocType") === meetingDocType ||
			   currentDocument.getItemValueString("DocType") === viewScope.meetingType)
			{
				return strings.getString("mobile.thread.heading.meeting");
			}
			else if(currentDocument.getItemValueString("DocType") === actionItemDocType ||
					currentDocument.getItemValueString("DocType") === viewScope.actionType)
			{
				return strings.getString("mobile.thread.heading.action");
			}
			else
			{
				return strings.getString("mobile.thread.heading.doc");
			}
		}]]></xp:this.label>
	</xe:djxmHeading>

	<xp:this.beforePageLoad><![CDATA[#{javascript:
        // redirect back to the home page if no contextual
        // query string parameters are available on the url...
        if(!param.containsKey("documentId")){
            context.redirectToHome();
        }
       
        // only allow standalone documents to be deleted
		var nd:NotesDocument = null;
		var ndc:NotesDocumentCollection = null;
		var responseCount = 0;
		
		if(null != currentDocument){
			nd = currentDocument.getDocument();
			ndc = nd.getResponses();
			if(null != ndc){
				responseCount = ndc.getCount();
			}
		}
		
		viewScope.responseCount = responseCount;
		
		topicThreadInit();
		
		//Pull in default doc types
		var missionView:NotesView = database.getView("MissionLookup");
		var missionNote:NotesDocument = missionView.getDocumentByKey("Mission");
		if(null != missionNote){
			viewScope.discussionType = missionNote.getItemValue("DefaultDocType1").elementAt(0);
			viewScope.actionType = missionNote.getItemValue("DefaultDocType2").elementAt(0);
			viewScope.meetingType = missionNote.getItemValue("DefaultDocType3").elementAt(0);
			viewScope.referenceType = missionNote.getItemValue("DefaultDocType4").elementAt(0);
		}
	}]]></xp:this.beforePageLoad>
	
