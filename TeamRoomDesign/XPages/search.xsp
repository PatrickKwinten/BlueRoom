<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core" xmlns:xc="http://www.ibm.com/xsp/custom"
	xmlns:xe="http://www.ibm.com/xsp/coreex">
	<xc:layout navigationPath="/allDocuments">
		<xp:text escape="true" id="titleField" tagName="h1">
			<xp:this.value><![CDATA[#{javascript:if(null != param.search){
	return I18n.format(strings.getString("search.results.for"), param.search);
}else{
	return strings.getString("no.search.results");
}}]]></xp:this.value>
		</xp:text>
		<xp:br></xp:br>
		<xe:pagerSaveState for="searchResultsView"
			globalRows="false" id="pagerSaveState1">
		</xe:pagerSaveState>
		<xe:dataView id="searchResultsView" var="viewEntry"
			binding="#{viewStateBean.dataIterator}" collapsibleRows="false"
			collapsibleDetail="true" columnTitles="true"
			pageName="/topicThread.xsp"
			openDocAsReadonly="true" rows="25" detailsOnClient="true"
			ariaLabel="Search results">
			<xe:this.summaryColumn>
				<xe:viewSummaryColumn columnTitle="Title">
					<xe:this.value><![CDATA[#{javascript:
					var doc = viewEntry.getDocument();
					var readers = doc.getItemValueString("readers") != "";
					var expire = doc.getItemValueString("expire") != "";
					var prefix = "";
					if(readers){
						prefix = strings.getString("private");
					}else if(expire){
						prefix = strings.getString("expired");
					}
					return prefix + viewEntry.getColumnValue("$143") == "" ? viewEntry.getColumnValue("$143") : strings.getString("home.subject.untitled");
				}]]></xe:this.value>
				</xe:viewSummaryColumn>
			</xe:this.summaryColumn>
			<xe:this.data>
				<xp:dominoView var="view1" viewName="xvwSearch"
					dataCache="id" expandLevel="1" search="#{param.search}">
				</xp:dominoView>
			</xe:this.data>
			<xe:this.extraColumns>
				<xe:viewExtraColumn columnName="$106"
					columnTitle="Date">
				</xe:viewExtraColumn>
				<xe:viewExtraColumn columnName="$146"
					columnTitle="Author">
					<xe:this.href><![CDATA[#{javascript:"/members.xsp?profile=" + peopleBean.getPerson(viewEntry.getColumnValue("$146")).abbreviatedName}]]></xe:this.href>
				</xe:viewExtraColumn>
			</xe:this.extraColumns>
			<xp:this.facets>
				<xc:homeDocTypeIcon id="docTypeIcon1" xp:key="icon" />
				<xp:panel xp:key="noRows">
					<xp:br />
					<xp:div styleClass="xlEmptyFacet">
						<xp:label
							value="#{javascript: strings.getString('no.search.results')}">
						</xp:label>
					</xp:div>
				</xp:panel>
				<xp:panel xp:key="summary" id="summaryPanel"
					style="display:inline-block">
					<xe:switchFacet id="switchFacet1"
						defaultFacet="unknown">
						<xe:this.selectedFacet><![CDATA[#{javascript:""+viewEntry.getColumnValue("DocType")}]]></xe:this.selectedFacet>
						<xp:this.facets>
							<xp:panel xp:key="Discussion"
								style="display:inline-block">
								<h4 style="margin:0px">
									<xp:link id="discussionLink">
										<xp:this.text><![CDATA[#{javascript:@NormalizeSubject(viewEntry.getColumnValue("$143")) }]]></xp:this.text>
										<xp:this.value><![CDATA[#{javascript:"/topicThread.xsp?action=openDocument&documentId=" + viewEntry.getUniversalID()}]]></xp:this.value>
									</xp:link>
								</h4>
							</xp:panel>
							<xp:panel xp:key="Meeting"
								style="display:inline-block">
